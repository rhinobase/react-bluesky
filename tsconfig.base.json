{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "bsky-react-post": ["packages/core/src/index.client.ts"],
      "bsky-react-post/api": ["packages/core/src/api.ts"],
      "bsky-react-post/server": ["packages/core/src/index.ts"],
      "bsky-react-post/theme.css": ["packages/core/src/theme.css"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
